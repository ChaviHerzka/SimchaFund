@using SimchaFund.Data;
@model HistoryViewModel;

<div class="container">
    <main role="main" class="pb-3" style="margin-top: 60px">
        <div class="header">
             <h1>History for @Model.Name</h1>
            <h3>Current Balance: @Model.Balance.ToString("C")</h3>
        </div>
        <div class="row header">
            <div class="table-responsive">
                  <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Date</th>
                                <th>Amount</th>
                            </tr>
                            @foreach(Transaction transaction in Model.Contributions)
                        {
                            <tr>
                                <td>@transaction.Action</td>
                                <td style="text-align: center; vertical-align: middle">
                                    @transaction.Date
                                </td>
                                <td style="text-align: center; vertical-align: middle;">
                                    @transaction.Amount
                                </td>
                            </tr>
                        }
                    </thead>
                  </table>
            </div>
        </div>
        <div style="text-align:center;">
            <a class="btn-lg btn-danger" href="Contributors/Contributors">Back to Contributors</a>
        </div>
    </main>

</div>
